#use <util>
#use <conio>

// You are welcome to define helper functions for your tests

int main() {
  // Test some regular cases
  pixel_t p = make_pixel(0x00, 0xEE, 0xFF, 0xAA);
  // assert(get_red(p) == 0xEE);
  assert(get_green(p) == 0xFF);
  assert(get_blue(p) == 0xAA);

  pixel_t p2 = make_pixel(0x00, 0xEE, 0xFF, 0xAA);
  // assert(get_red(p2) == 0xEE);
  assert(get_green(p2) == 0xFF);
  assert(get_blue(p2) == 0xAA);


  // Run some edge cases
  pixel_t p5 = make_pixel(0xFF, 0xFF, 0xFF, 0xFF);
  assert(get_green(p5) == 0xFF);
  assert(get_blue(p5) == 0xFF);

  pixel_t p6 = make_pixel(0x00, 0xFF, 0xFF, 0x00);
  // assert(get_red(p6) == 0xFF);
  assert(get_green(p6) == 0xFF);
  assert(get_blue(p6) == 0x00);


  printf("All tests passed!\n");
  return 0;
}
